@font-face
    font-family 'MenschRegular'
    src url('../font/mensch-wf.eot?#iefix') format('embedded-opentype'), url('../font/mensch-wf.woff') format('woff'), url('../font/mensch-wf.ttf') format('truetype'), url('../font/mensch-wf.svg#MenschMenschRegular') format('svg')
    font-weight normal
    font-style normal

@font-face
    font-family: 'MenschBold'
    src url('../font/mensch-bold-wf.eot?#iefix') format('embedded-opentype'),url('../font/mensch-bold-wf.woff') format('woff'),url('../font/mensch-bold-wf.ttf') format('truetype'),url('../font/mensch-bold-wf.svg#MenschMenschBold') format('svg')
    font-weight normal
    font-style normal

center()
    width 960px
    margin 0 auto

body
    background #FFF url('../images/bg_tile.png') repeat top left
    font 12px Helvetica, Arial, sans-serif

#content
    center()

header
    center()
    margin-top: 40px
    padding-bottom: 10px

h1, h2, h3
    margin 0

h1
    font 60px 'MenschRegular'
    color #000
    margin-bottom 10px

.project
    color #A30E0E
    float left

ul
    list-style-type none
    margin 40px 0
    padding 0

.success
    color #228822

.failure
    color #A30E0E

code
  pre
    font 13px 'Monaco', courier, 'courier new', monospace
    span
      &.bold { font-weight: bold; }
      &.underscore { text-decoration: underscore; }
      &.fg-black   { color: #34352E; }
      &.fg-red     { color: #E72970; }
      &.fg-green   { color: #B5E247; }
      &.fg-yellow  { color: #EAE262; }
      &.fg-blue    { color: #58BCF8; }
      &.fg-magenta { color: #B58CFD; }
      &.fg-cyan    { color: #60DDEF; }
      &.fg-white   { color: #60DDEF; }

li.job
    position relative
    .day
      position absolute
      width 70px
      left -80px
      padding 5px
      font-weight bold
      color #F2F2F2
      background #A30E0E
      

    
    &:last-child
        a
            border-bottom 1px solid #E6E6E6
    a
        cursor pointer
        width 920px
        height 20px
        padding 20px
        display block
        background-color #EEE
        border-top 1px solid #E6E6E6
        text-decoration none
        color #BBB

        .commit_details
            float: left
            font-weight normal
            .commit-sha
              font 13px 'Monaco', courier, 'courier new', monospace
            .commit-message
              font-size 16px
              color #666

        .job_id
            clear: both
            color: #ddd

        .outcome
            font 16px 'MenschRegular', sans-serif
            float right

        img.loader
            float right

        .time
            font 13px 'Monaco', courier, 'courier new', monospace
            float left
            margin-right 20px

        &:hover
            background-color #EAEAEA

    .job_container
        display none
        width 920px
        padding 20px
        background-color #333
        font 13px 'Monaco', courier, 'courier new', monospace
        color #777

        span.output
            color #DDD

nav
  a
    display: block
    float: left
    font-size: 1.5em
    text-decoration: none
    color #999
    margin-left 10px
    
    &:first-child
      margin-left 20px
    &:hover
      text-decoration: underline
      color: #888
    &.active
      color: #666
  form
    float right

#stats
  margin-top 40px
  .stat-chart
    background-color #eee
    border-bottom 1px #ddd solid
    border-top 1px #ddd solid
    margin-top 10px

